	<% } %>


	<!-- /Header -->
	<!-- Banner -->
	<div class="banner">
		<img src="/images/products/portada final.jpg" alt="Banner">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				
				<p class="products-title">
					JUGADORES
				</p>
			</div>
			<!-- Show the "ultimos" products -->
			

			<% for (let i = 0; i<posiciones.length; i++) { %>
				
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">

							<a href="/busqueda?search=<%=posiciones[i].nombre_producto %>">



							
								<div class="contenedor-imagen">
					
									<img class="product-box_image"src="<%= posiciones[i].foto %>" alt="Jugador">

								</div>
								<article class="product-box_data">
									<h2><%= posiciones[i].nombre_producto %></h2>
									<p><%= posiciones[i].detalle %></p>
									
								</article>
							</a>
						</section>
					</div>
			<%}%>
		
		</div>
	</div>
