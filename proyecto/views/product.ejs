<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

	<title> Mercado de Camisetas</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) {%>
		<%- include('partials/headerLogueado') %>

	<% } else { %>
		<%- include('partials/header') %>

	<% } %>
	<!-- /Header -->
	

	<!-- product detail -->
	
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title">Creado por: <%= usuario.email %></h2> <br/>

			<h2 class="products-title"><%= nombre %></h2> 
			
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= imagen %>" alt="" class="product-detail-img">
					<h2>Descripci√≥n:</h2>
					<p class="product-detail-description">
						<%= descripcion %></p>
						
				</article>


				
					<div class="col-12 col-lg-4">
					  <section class="comments">
						<article>
						  <!-- <img src="https://via.placeholder.com/35" alt=""> -->
						  <div class="data">
							<h2>Comentarios:</h2>
							<% for (let i=0; i< comentarios.length; i ++) { %>
							  <p class="user">
								<strong> <a href="/profile/<%=comentadores[i].id%>"><%=  comentadores[i].email %> </a> </strong>
								<%= comentarios[i].texto_comentario %>
						
							  </p>
							  <% } %>
						  </div>
						</article>
					  </section>
					</div>
				  
				  

				
					</section>
					<form class="form" action="/" method='GET'>
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>